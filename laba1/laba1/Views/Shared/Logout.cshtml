@page
@{
    ViewData["Title"] = "Log out";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form id="logoutForm" asp-route-returnurl="/" method="post">
                    <h4>Вы уверены, что хотите выйти?</h4>
                    <button type="submit" class="btn btn-default">Выйти</button>
                </form>
            </section>
        </div>
    </div>
</div>
